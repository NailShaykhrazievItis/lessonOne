<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingEnd="@dimen/margin.large"
        android:paddingStart="@dimen/margin.large"
        android:paddingTop="@dimen/margin.large"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text.16"
        tools:text="The Lord of the Rings" />

    <TextView
        android:id="@+id/item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin.large"
        android:paddingEnd="@dimen/margin.large"
        android:paddingStart="@dimen/margin.large"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text.14"
        tools:text="J.R.R. Tolkien" />

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin.large"
        android:paddingEnd="@dimen/margin.large"
        android:paddingStart="@dimen/margin.large"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text.14"
        tools:text="Description" />

    <TextView
        android:id="@+id/item_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin.large"
        android:paddingEnd="@dimen/margin.large"
        android:paddingStart="@dimen/margin.large"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text.14"
        tools:text="Genre" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin.large"
        android:paddingEnd="@dimen/margin.large"
        android:paddingStart="@dimen/margin.large"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text.14"
        tools:text="Date" />

    <TextView
        android:id="@+id/item_lib_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin.large"
        android:paddingEnd="@dimen/margin.large"
        android:paddingStart="@dimen/margin.large"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text.14"
        tools:text="Library name" />

</LinearLayout>
