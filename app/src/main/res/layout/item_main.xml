<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
     >



    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/primary_text"
        android:paddingLeft="@dimen/margin.large"
        android:textSize="@dimen/text.18"
        tools:text="The Lord of the Rings" />


    <TextView
        android:id="@+id/item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin.normal"
        android:paddingEnd="@dimen/margin.large"
        android:paddingLeft="@dimen/margin.large"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text.16"
        tools:text="J.R.R. Tolkien" />
</LinearLayout>
