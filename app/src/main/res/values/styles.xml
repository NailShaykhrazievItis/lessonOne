<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/margin.normal</item>
        <item name="android:textSize">@dimen/text.16</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/primary_text</item>
    </style>

</resources>
